#include <iostream>
#include <string>
using namespace std;
/**
*This is class is an entity class for employee Object. Users of this API use the instance for employee records processing.
*/
class Employee
{
private:
string name;
string gender;
string department; 
public:
string getname(na);
string getgender(ge);
string getdepartment(dp);
void display();
Employee();
Employee(na,ge,dp);
};
string Employee::getname(na)
{
return name;
}
string Employee::getgender(ge)
{
return gender;
}
string Employee::getdepartment(dp)
{
return department; 
}

string Employee::display ()
{
cout <<"Name:"<<name <<endl;
cout <<"Gender"<<gender <<endl;
cout <<"Department"<<department <<endl;
}
Employee::Employee()
{
};
/**
* Universal Constructor for the Employees Entity class.
* 
*@param employeeName -String
*@param employeeGender -String
*@param employeeDepertment -String
*/
Employee::Employee(string employeeName, string employeeGender, string employeeDepertment)
{
name=employeeName;
gender=employeeGender;
department=employeeDepertment;
}
